constante tempo: inteiro = 10
constante pinoPot: inteiro = 0
constante pinoLCD: inteiro = 1

declare	y: real

comando_setup
	ativar(potenciometro, pinoPot)
	ativar(lcd, pinoLCD)
fim_comando_setup

comando_loop	
	y <- ler(potenciometro, pinoPot)
	escrever(lcd, pinoLCD, y)
	esperar(tempo)	
fim_comando_loop
